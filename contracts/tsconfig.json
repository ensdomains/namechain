{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleDetection": "force",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "outDir": "build",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@rocketh": ["./rocketh.ts"]
    },
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "./plugins/**/*.ts",
    "./test/**/*.ts",
    "./e2e/**/*.ts",
    "./artifacts/**/*.d.ts",
    "./deploy/**/*.ts",
    "./script/**/*.ts"
  ],
  "ts-node": {
    "experimentalResolver": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  },
  "files": ["hardhat.config.ts", "rocketh.ts", "vitest.config.ts"]
}
