{
  "name": "contracts",
  "type": "module",
  "scripts": {
    "deploy": "hardhat deploy",
    "compile:hardhat": "hardhat compile",
    "test:hardhat": "hardhat compile && vitest run",
    "test:forge": "forge test",
    "test:e2e": "bun test ./e2e/*.test.ts",
    "test": "bun run test:forge && bun run test:hardhat",
    "coverage:mkdir": "node -e 'require(`fs`).mkdirSync(`coverage`, {recursive: true })'",
    "coverage:clean": "node -e 'require(`fs`).rmSync(`coverage`, {recursive: true, force: true})'",
    "coverage:forge": "bun run coverage:mkdir && forge coverage --report lcov --report-file coverage/forge.info",
    "coverage:hardhat": "hardhat compile --coverage && COVERAGE=1 vitest run",
    "coverage": "bun run coverage:forge && bun run coverage:hardhat && bun run sanitize-lcov.sh",
    "clean": "forge clean && hardhat clean && bun run coverage:clean",
    "devnet": "bun ./script/runDevnet.ts",
    "aakit": "bun ./script/deployAAkit.ts",
    "devnet:clean": "bun run test && bun ./script/runDevnet.ts",
    "check:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@ensdomains/hardhat-chai-matchers-viem": "0.1.11",
    "@namestone/ezccip": "^0.1.0",
    "@nomicfoundation/edr": "0.12.0-next.4",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-keystore": "3.0.0-next.20",
    "@nomicfoundation/hardhat-network-helpers": "3.0.0-next.20",
    "@nomicfoundation/hardhat-viem": "3.0.0-next.20",
    "@rocketh/deploy": "^0.11.18",
    "@rocketh/read-execute": "^0.11.19",
    "@rocketh/verifier": "^0.11.18",
    "@types/bun": "latest",
    "chai": "^5.1.1",
    "hardhat": "3.0.0-next.20",
    "hardhat-deploy": "^2.0.0-next.31",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^2.0.0",
    "prool": "^0.0.24",
    "rocketh": "^0.11.18",
    "ts-node": "^10.9.2",
    "viem": "^2.31.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.1.3"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=24"
  },
  "engineStrict": true
}
